// Add to typing_provider.dart
Future<void> resetDailyProgress() async {
  final now = DateTime.now();
  if (_lastPracticeDate?.day != now.day) {
    _sentencesCompletedToday = 0;
    _lastPracticeDate = now;
    await _prefs.setInt('sentencesCompletedToday', 0);
    await _prefs.setString('lastPracticeDate', now.toString());
    notifyListeners();
  }
}

int get dailyLimit => _dailyLimit;
int get sentencesCompletedToday => _sentencesCompletedToday;
String get currentSentence => _sentences[_currentSentenceIndex];